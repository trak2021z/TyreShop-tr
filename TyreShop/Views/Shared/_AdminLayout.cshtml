<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/site.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <style>
        .input-validation-error {
            border-color: red;
            background-color: #fee;
        }
    </style>
</head>
<body style="margin-bottom: 5rem">
    <div class="navbar navbar-inverse bg-inverse" role="navigation">
        <div class="row">
            <div class="col navbar-brand">
                <h4>@ViewBag.Title</h4>
            </div>
            <div class="col d-inline text-right">
                <a class="btn btn-sm btn-primary" asp-action="MainPage" asp-controller="Account">
                    Idź do sklepu
                </a>

                @if (User?.Identity?.IsAuthenticated ?? false)
                {
                    <a class="btn btn-sm btn-primary" asp-action="Logout" asp-controller="Account">
                        Wyloguj
                    </a>
                }
            </div>
        </div>
    </div>


    @if (TempData["msg"] != null)
    {
        <div class="alert alert-success mt-1">@TempData["msg"]</div>
    }
    <div class="m-2 p-2">
        @RenderBody()
    </div>

    <footer class="card-footer text-center"
            style="position: fixed; bottom: 0; width: 100%;">
        <div class="container">
            <span class="text-muted">
                &copy; 2021 - Tyre Shop
             </span>>
        </div>
    </footer>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/jquery.validate.min.js"></script>
    <script src="~/js/jquery.validate.unobtrusive.js"></script>
</body>
</html>
