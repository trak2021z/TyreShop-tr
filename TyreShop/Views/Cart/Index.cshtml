@model CartIndexViewModel

<h2 class="text-center">Twój koszyk</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Ilość</th>
            <th>Produkt</th>
            <th class="text-right">Cena</th>
            <th class="text-right">Wartość</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.Cart.Lines)
        {
            <tr>
                <td class="text-center">@line.Quantity</td>
                <td class="text-left">@line.Product.Name</td>
                <td class="text-right">@line.Product.Price.ToString("C")</td>
                <td class="text-right">@((line.Quantity * line.Product.Price).ToString("C"))</td>
                <td>
                    <form asp-action="RemoveFromCart" method="post">
                        <input type="hidden" name="productID" value="@line.Product.ProductID" />
                        <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                        
                        <button type="submit" class="btn btn-sm btn-danger">
                            Usuń
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Razem:</td>
            <td class="text-right">@Model.Cart.ComputeTotalValue().ToString("C")</td>
            <td>
                @if (Model.Cart.Lines.Any())
                {
                    <form asp-action="Clear" method="post">
                        <input type="hidden" name="returnUrl" value="@Model.ReturnUrl"/>

                        <button type="submit" class="btn btn-sm btn-danger">
                            Usuń wszystko
                        </button>
                    </form>
                }
            </td>
        </tr>
    </tfoot>
</table>

<div class="text-center">
    <a class="btn btn-primary" href="@Model.ReturnUrl">Kontynuuj zakupy</a>
    <a class="btn btn-primary" asp-action="Checkout" asp-controller="Order"> Złóż zamówienie</a>
</div>